<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/home_color">

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/name_color"
        android:background="@color/name_background"
        android:padding="@dimen/name_padding"
        android:layout_marginTop="128dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/name_margin"
        android:layout_marginRight="@dimen/name_margin"/>

    <TextView
        android:id="@+id/pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pswd"
        android:textColor="@color/pswd_color"
        android:background="@color/pswd_background"
        android:padding="@dimen/pswd_padding"
        android:layout_below="@+id/email"
        android:layout_marginLeft="@dimen/pswd_margin"
        android:layout_marginRight="@dimen/pswd_margin"
        android:layout_marginTop="@dimen/pswd_margin"
        />
    <Button
        android:id="@id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/login_color"
        android:background="@color/login_background"
        android:padding="@dimen/login_padding"
        android:gravity="center"
        android:layout_below="@+id/pswd"
        android:layout_marginLeft="@dimen/pswd_margin"
        android:layout_marginRight="@dimen/pswd_margin"
        android:layout_marginTop="@dimen/pswd_margin"/>
    <TextView
        android:id="@id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg"
        android:textColor="@color/msg_color"
        android:background="@color/msg_background"
        android:padding="@dimen/login_padding"
        android:gravity="center"
        android:layout_below="@+id/login"
        android:layout_marginLeft="@dimen/pswd_margin"
        android:layout_marginRight="@dimen/pswd_margin"
        android:layout_marginTop="@dimen/pswd_margin"/>

</RelativeLayout>